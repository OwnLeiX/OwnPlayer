<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:layout_width="200dp"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/gray33"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/homeActivity_iv_menuBg"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_title_bg"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/homeActivity_iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:elevation="2dp"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:outlineProvider="bounds"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/homeActivity_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:shadowColor="@color/black"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5"
            app:layout_constraintLeft_toRightOf="@id/homeActivity_iv_avatar"
            app:layout_constraintTop_toTopOf="@id/homeActivity_iv_avatar"
            app:layout_constraintBottom_toBottomOf="@id/homeActivity_iv_avatar"
            android:layout_marginStart="15dp"
            android:text="@string/default_nickname" />


        <TextView
            android:id="@+id/homeActivity_tv_feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:singleLine="true"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@id/homeActivity_tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/homeActivity_tv_nickname"
            app:layout_constraintBottom_toBottomOf="@id/homeActivity_iv_avatar"
            android:text="@string/default_feeling" />

        <TextView
            android:id="@+id/homeActivity_tv_leftLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="1sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/homeActivity_tv_appName"
            app:layout_constraintBottom_toBottomOf="@id/homeActivity_tv_appName"
            app:layout_constraintRight_toLeftOf="@id/homeActivity_tv_appName" />

        <TextView
            android:id="@+id/homeActivity_tv_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="5sp"
            android:singleLine="true"
            android:paddingStart="2dp"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5"
            android:paddingEnd="2dp"
            android:ellipsize="end"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/homeActivity_iv_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/homeActivity_tv_leftLine"
            app:layout_constraintRight_toLeftOf="@id/homeActivity_tv_rightLine" />

        <TextView
            android:id="@+id/homeActivity_tv_rightLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="1sp"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5"
            android:singleLine="true"
            android:ellipsize="none"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@id/homeActivity_tv_appName"
            app:layout_constraintBottom_toBottomOf="@id/homeActivity_tv_appName"
            app:layout_constraintLeft_toRightOf="@id/homeActivity_tv_appName"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homeActivity_ll_leftMenu"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:divider="@drawable/shape_menu_divider"
            android:dividerPadding="10dp"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>